    // Mostrar sugerencias de aulas
    if (data.sugerencias.aulas && data.sugerencias.aulas.length > 0) {
        html += '<div class="col-12"><h6><i class="fas fa-door-open"></i> Sugerencias de Aulas</h6></div>';
        
